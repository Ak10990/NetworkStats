<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="pl.rzagorski.networkstatsmanager.view.MainActivity">

        <EditText
            android:id="@+id/package_name_edit_text"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter package name"
            android:text="com.android.browser"/>

        <View
            android:id="@+id/divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_below="@+id/package_name_edit_text"
            android:layout_centerHorizontal="true"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/textView4"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/package_name_edit_text"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/divider"
            android:gravity="center_horizontal"
            android:minLines="2"
            android:padding="8dp"
            android:text="TrafficStats"/>

        <TextView
            android:id="@+id/textView2"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/package_name_edit_text"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/divider"
            android:gravity="center_horizontal"
            android:minLines="2"
            android:padding="8dp"
            android:text="Network Stats Manager"/>

        <TextView
            android:id="@+id/traffic_stats_all_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/textView4"
            android:layout_toLeftOf="@id/divider"
            android:padding="8dp"
            android:text="All uid"/>

        <TextView
            android:id="@+id/network_stats_manager_all_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textView4"
            android:layout_toRightOf="@id/divider"
            android:padding="8dp"
            android:text="All uid"/>

        <TextView
            android:id="@+id/traffic_stats_all_uid"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/traffic_stats_all_title"
            android:layout_toLeftOf="@id/divider"
            android:padding="8dp"
            android:text="All uid"/>

        <TextView
            android:id="@+id/network_stats_manager_all_uid"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/network_stats_manager_all_title"
            android:layout_toRightOf="@id/divider"
            android:padding="8dp"
            android:text="Not implemented"/>

        <TextView
            android:id="@+id/traffic_stats_all_Rx_title"
